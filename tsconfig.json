{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@fonts": ["src/styles/fonts.ts"],
      "@scss/*": ["src/styles/scss/*"],
      "@assets/*": ["src/app/_assets/*"],
      "@lib/*": ["src/app/_lib/*"],
      "@types": ["src/app/_lib/types/"],
      "@components/*": ["src/components/*"]

    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "./next.config.js", "swiper.d.ts"],
  "exclude": ["node_modules"]
}
